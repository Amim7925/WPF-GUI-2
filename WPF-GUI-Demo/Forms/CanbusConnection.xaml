<UserControl x:Class="WPF_GUI_Demo.Forms.CanbusConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_GUI_Demo.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500" Background="#fff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Margin="10 10 0 0" Text="Available Hardware"></TextBlock>
            <ListView Height="260" Margin="10">
                
            </ListView>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Label Content="User Name :"></Label>
                <TextBox x:Name="txtUserName" Height="30" Margin="5 0 0 0" ></TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
