<UserControl x:Class="WPF_GUI_Demo.Forms.TCPConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_GUI_Demo.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450" Background="#fff">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="3" Margin="60 35" Fill="#265B5B5B"/>
        <StackPanel Margin="20 50" Grid.Column="1">
            <Label Content="IP Adress :"></Label>
            <TextBox x:Name="txtUserName" Height="25" Margin="5 0 0 0" ></TextBox>
            <Label Content="Port Number :" Margin="0 15 0 0"></Label>
            <TextBox x:Name="txtPortNumber" Height="25" Margin="5 0 0 0" ></TextBox>
            <Button Content="Save changes" Margin="0 35" Width="150" Height="30"></Button>
        </StackPanel>
    </Grid>
</UserControl>
