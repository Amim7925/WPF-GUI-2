<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GUI_Demo" xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ribbon="http://schemas.actiprosoftware.com/winfx/xaml/ribbon" x:Class="WPF_GUI_Demo.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024" AllowsTransparency="True" WindowStyle="None" WindowState="Maximized"  >
    <Window.Resources>
        <Storyboard x:Key="Leftdashboardgoesright">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="stackPanel">
                <EasingThicknessKeyFrame KeyTime="0" Value="-155,0,155,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.3" Value="0"/>
            </ThicknessAnimationUsingKeyFrames>

            <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Grid.ColumnSpan)" Storyboard.TargetName="stackPanel">
                <EasingInt32KeyFrame KeyTime="0" Value="2"/>
                <EasingInt32KeyFrame KeyTime="0:0:0.3" Value="2"/>
            </Int32AnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="leftdahboargetsback">
            <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Grid.ColumnSpan)" Storyboard.TargetName="stackPanel">
                <EasingInt32KeyFrame KeyTime="0" Value="2"/>
            </Int32AnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="stackPanel">
                <EasingThicknessKeyFrame KeyTime="0" Value="0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.3" Value="-150,0,150,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="downItemscomup">

            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="rectangle">
                <EasingThicknessKeyFrame KeyTime="0" Value="10,200,0,-200"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.3" Value="0"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DownGrid">
                <EasingThicknessKeyFrame KeyTime="0" Value="10,200,0,-200"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.3" Value="0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="downItemscomdown">

            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="rectangle">
                <EasingThicknessKeyFrame KeyTime="0" Value="0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.3" Value="10,200,0,-200"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DownGrid">
                <EasingThicknessKeyFrame KeyTime="0" Value="0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:0.3" Value="10,200,0,-200"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnGoright">
            <BeginStoryboard Storyboard="{StaticResource Leftdashboardgoesright}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnGoleft">
            <BeginStoryboard Storyboard="{StaticResource leftdahboargetsback}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnGoTop">

            <BeginStoryboard Storyboard="{StaticResource downItemscomup}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="BtnGoDown">

            <BeginStoryboard Storyboard="{StaticResource downItemscomdown}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid Background="White" x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44"/>
            <ColumnDefinition Width="156"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="323"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="188*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid x:Name="TiltleBar" Grid.ColumnSpan="4" Grid.Row="0" Margin="0,0,0,0.4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button  x:Name="btnMinimize"  
Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"  Foreground="Black" Height="20"
                  Click="btnMinimize_Click" Margin="0,10,16,10" FontWeight="Bold" Width="20"
                 Background="{x:Null}" BorderBrush="{x:Null}"   >
                    <md:PackIcon Kind="WindowMinimize"  FontSize="20"  />
                </Button>
                <Button  x:Name="btnpower"  
Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"  Foreground="Black" Height="20"
                  Click="btnpower_Click" Margin="0,10,17,10" FontWeight="Bold" Width="20"
                 Background="{x:Null}" BorderBrush="{x:Null}"   >
                    <md:PackIcon Kind="Power"  FontSize="20"  />
                </Button>

            </StackPanel>

        </Grid>




        <Grid x:Name="MainItemsGrid" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,0" Background="#FFC8C8C8">

            <local:LineChart Margin="10 0 0 0" />

        </Grid>

        <Rectangle x:Name="rectangle" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Fill="#7FFFFFFF" Margin="10 200 0 -200"/>
        <Grid x:Name="DownGrid" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="10 200 0 -200">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"/>

            <Viewbox Width="90" Height="90" Margin="0,-60,0,50" VerticalAlignment="Top" >
                <Grid  >
                    <Button  x:Name="BtnGoTop" Width="15" Height="15"  
Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"  Foreground="White" 
                  Click="BtnGoTop_Click"  FontWeight="Bold" 
                 Background="#07000459" BorderBrush="#08C5C5C5"   >
                        <md:PackIcon Kind="ArrowTopBoldBox" HorizontalAlignment="Center" Width="6" Height="6"  VerticalAlignment="Center" />
                    </Button>


                    <Button  x:Name="BtnGoDown" Width="15"  Height="15"  Visibility="Hidden"
Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"  Foreground="White" 
                  Click="BtnGoDown_Click"  FontWeight="Bold" 
                 Background="#07000459" BorderBrush="#08C5C5C5"   >
                        <md:PackIcon Kind="ArrowDownBoldBox" HorizontalAlignment="Center" Width="6" Height="6"  VerticalAlignment="Center" />
                    </Button>
                </Grid>
            </Viewbox>


        </Grid>
        <Grid Grid.Column="0" Grid.RowSpan="4"  x:Name="leftGrid" Grid.ColumnSpan="2" >
            <Grid x:Name="stackPanel" Margin="-155 0 155 0">
                <StackPanel  Background="#FF3D3B3D"  >
                    <TextBlock Text="Dashboard" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,7,0,0" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    <Button  d:LayoutOverrides="Height" Margin="0,15" Background="{x:Null}" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" >

                            <TextBlock Text="Flowers" Foreground="White" Margin="30,0,-40,0" />
                            <md:PackIcon Kind="Plus" Margin="115,0,0,0" HorizontalAlignment="Left" Foreground="White" />

                        </StackPanel>


                    </Button>

                    <Button  d:LayoutOverrides="Height" Margin="0,15" Background="{x:Null}" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" >

                            <TextBlock Text="Flowers" Foreground="White" Margin="30,0,-40,0" />
                            <md:PackIcon Kind="Edit" Margin="115,0,0,0" HorizontalAlignment="Left" Foreground="White" />

                        </StackPanel>


                    </Button>



                    <Button  d:LayoutOverrides="Height" Margin="0,15" Background="{x:Null}" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" >

                            <TextBlock Text="Flowers" Foreground="White" Margin="30,0,-40,0" />
                            <md:PackIcon Kind="Settings" Margin="115,0,0,0" HorizontalAlignment="Left" Foreground="White" />

                        </StackPanel>


                    </Button>

                    <Button  d:LayoutOverrides="Height" Margin="0,15" Background="{x:Null}" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" >

                            <TextBlock Text="Flowers" Foreground="White" Margin="30,0,-40,0" />
                            <md:PackIcon Kind="Search" Margin="115,0,0,0" HorizontalAlignment="Left" Foreground="White" />

                        </StackPanel>


                    </Button>

                    <Button  d:LayoutOverrides="Height" Margin="0,15" Background="{x:Null}" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" >

                            <TextBlock Text="Flowers" Foreground="White" Margin="30,0,-40,0" />
                            <md:PackIcon Kind="Account" Margin="115,0,0,0" HorizontalAlignment="Left" Foreground="White" />

                        </StackPanel>


                    </Button>
                </StackPanel>

                <Viewbox Width="90" Height="90" Margin="45,0,-45,0" HorizontalAlignment="Right" >
                    <Grid  >
                        <Button  x:Name="BtnGoleft" Width="15" Height="15"  Visibility="Hidden"
Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"  Foreground="White" 
                  Click="BtnGoleft_Click"  FontWeight="Bold" 
                 Background="#FF3D3B3D" BorderBrush="#FF3D3B3D"   >
                            <md:PackIcon Kind="ArrowLeftBox" HorizontalAlignment="Center" Width="6" Height="6"  VerticalAlignment="Center" />
                        </Button>


                        <Button  x:Name="BtnGoright" Width="15"  Height="15"  
Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"  Foreground="White" 
                  Click="BtnGoright_Click"  FontWeight="Bold" 
                 Background="#FF3D3B3D" BorderBrush="#FF3D3B3D"   >
                            <md:PackIcon Kind="ArrowRightBox" HorizontalAlignment="Center" Width="6" Height="6"  VerticalAlignment="Center" />
                        </Button>
                    </Grid>
                </Viewbox>

            </Grid>




        </Grid>

        <Grid Grid.Row="1" Grid.Column="4"/>

        <ribbon:Button Grid.Column="3" HorizontalAlignment="Left" Label="New Button" Margin="136.2,89.6,0,0" Grid.Row="1" VerticalAlignment="Top">
            <ribbon:Button.ImageSourceSmall>
                <BitmapImage UriSource="pack://application:,,,/ActiproSoftware.Ribbon.Wpf;component/Products/Ribbon/Images/ButtonDefault32.png" UriCachePolicy="{x:Null}"/>
            </ribbon:Button.ImageSourceSmall>
        </ribbon:Button>

    </Grid>
</Window>
