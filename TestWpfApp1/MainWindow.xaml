<Window x:Class="TestWpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="158*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Left"  Margin="20 5">
            
            
            <TextBox TextChanged="TextBox_TextChanged" Name="txtwSearch" Width="200"/>
        </Grid>
        <Menu x:Name="Menu" Grid.Column="2" >
            <MenuItem Name="MenuItem"   Width="200" Margin="0" Height="40">
                
            </MenuItem>
        </Menu>
    </Grid>
</Window>
